{
	"definitions": {
		"api_channel_create": {
			"type": "object",
			"properties": {
				"channel": { "type": "string", "minLength": 1 },
				"profile": { "type": "string" }
			},
			"required": ["channel", "profile"]
		},

		"api_channel_join": {
			"type": "object",
			"properties": {
				"channel": { "type": "string", "minLength": 1 },
				"org": { "type": "integer" },
				"peers": { "type": "array", "items": { "type": "integer" }, "minItems": 1 }
			},
			"required": ["channel", "org", "peers"]
		},

		"api_channel_update_anchor_peer": {
			"type": "object",
			"properties": {
				"channel": { "type": "string", "minLength": 1 },
				"org": { "type": "integer" },
				"peers": { "type": "array", "items": { "type": "integer" }, "minItems": 1 }
			},
			"required": ["channel", "org", "peers"]
		},

		"api_chaincode_install": {
			"type": "object",
			"properties": {
				"org": { "type": "integer" },
				"peers": { "type": "array", "items": { "type": "integer" }, "minItems": 1 },
				"ccname": { "type": "string", "minLength": 1 },
				"ccver": { "type": "string", "minLength": 5 },
				"cclang": { "type": "string", "enum": ["go", "node", "java"] }
			},
			"required": ["org", "peers", "ccname", "ccver", "cclang"]
		},

		"api_chaincode_upgrade": {
			"type": "object",
			"properties": {
				"channel": { "type": "string", "minLength": 1 },
				"org": { "type": "integer" },
				"peer": { "type": "integer" },
				"ccname": { "type": "string", "minLength": 1 },
				"ccver": { "type": "string", "minLength": 5 },
				"ccargs": { "type": "string" }
			},
			"required": ["channel", "org", "peer", "ccname", "ccver"]
		},

		"api_chaincode_instantiate": {
			"type": "object",
			"properties": {
				"channel": { "type": "string", "minLength": 1 },
				"org": { "type": "integer" },
				"peer": { "type": "integer" },
				"ccname": { "type": "string", "minLength": 1 },
				"ccver": { "type": "string", "minLength": 5 },
				"ccargs": { "type": "string" }
			},
			"required": ["channel", "org", "peer", "ccname", "ccver"]
		}
	}
}
